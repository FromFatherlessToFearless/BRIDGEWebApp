@page
@model BRIDGEWebApp.Pages.SurveySection.IndexModel

@{
    ViewData["Title"] = "Survey Sections";
}

<h1>Survey Sections</h1>

<p>
    <a type="button" class="btn btn-sm btn-success" asp-page="Create">Create Survey Section</a>
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SurveySection[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveySection[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveySection[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveySection[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SurveySection) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if(item.IsActive)
                {
                    <span>Yes</span>
                } else
                {
                    <span>No</span>
                }
            </td>
             <td>
                <a type="button" class="btn btn-sm btn-primary" asp-page="./Details" asp-route-id="@item.Id">View</a>
                <a type="button" class="btn btn-sm btn-success" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
