@page
@model BRIDGEWebApp.Pages.Survey.IndexModel

@{
    ViewData["Title"] = "Surveys";
}

<h1>Surveys</h1>

<p>
    <a type="button" class="btn btn-sm btn-success" asp-page="Create">Create Survey</a>
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SurveyViewModels[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyViewModels[0].CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyViewModels[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SurveyViewModels) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @if (item.IsActive)
                {
                    <span>Yes</span>
                } else
                {
                    <span>No</span>
                }
            </td>
            <td>
                <a type="button" class="btn btn-sm btn-primary" asp-page="./Details" asp-route-id="@item.Id">View</a>
                <a type="button" class="btn btn-sm btn-success" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
