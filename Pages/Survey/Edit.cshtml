@page
@model BRIDGEWebApp.Pages.Survey.EditModel

@{
    ViewData["Title"] = "Edit Survey";
}

<h1>Edit Survey</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Survey.Id" />
            <div class="form-group">
                <label asp-for="Survey.Name" class="control-label"></label>
                <input asp-for="Survey.Name" class="form-control" />
                <span asp-validation-for="Survey.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Survey.IsActive" />
                    @Html.DisplayNameFor(model => model.Survey.IsActive)
                </label>
            </div>
            @Html.HiddenFor(model => model.Survey.CreatedBy)
            @Html.HiddenFor(model => model.Survey.CreatedOn)
            @Html.HiddenFor(model => model.Survey.UpdatedBy)
            @Html.HiddenFor(model => model.Survey.UpdatedOn)
            <input type="submit" value="Save" class="btn btn-sm btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
