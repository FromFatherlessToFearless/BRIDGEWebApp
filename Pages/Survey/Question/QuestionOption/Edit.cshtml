@page "/survey/{surveyId}/question/{questionId}/questionOption/edit"
@model BRIDGEWebApp.Pages.Survey.Question.QuestionOption.EditModel

@{
    ViewData["Title"] = "Edit Answer Option";
}

<h1>Edit Answer Option</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionOption.Id" />
            <div class="form-group">
                <label asp-for="QuestionOption.Text" class="control-label"></label>
                <input asp-for="QuestionOption.Text" class="form-control" />
                <span asp-validation-for="QuestionOption.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionOption.Order" class="control-label"></label>
                <input asp-for="QuestionOption.Order" class="form-control" />
                <span asp-validation-for="QuestionOption.Order" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="QuestionOption.IsOther" /> @Html.DisplayNameFor(model => model.QuestionOption.IsOther)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="QuestionOption.IsActive" /> @Html.DisplayNameFor(model => model.QuestionOption.IsActive)
                </label>
            </div>
            @Html.HiddenFor(model => model.QuestionOption.CreatedBy)
            @Html.HiddenFor(model => model.QuestionOption.CreatedOn)
            @Html.HiddenFor(model => model.QuestionOption.UpdatedBy)
            @Html.HiddenFor(model => model.QuestionOption.UpdatedOn)
            @Html.HiddenFor(model => model.QuestionOption.QuestionId)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-surveyId="@ViewData["SurveyId"]" asp-route-questionId="@ViewData["QuestionId"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
