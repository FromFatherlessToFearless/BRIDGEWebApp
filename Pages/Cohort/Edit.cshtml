@page
@model BRIDGEWebApp.Pages.Cohort.EditModel

@{
    ViewData["Title"] = "Edit Cohort";
}

<h1>Edit Cohort</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cohort.Id" />
            <input type="hidden" asp-for="Cohort.CreatedBy" />
            <input type="hidden" asp-for="Cohort.CreatedOn" />
            <input type="hidden" asp-for="Cohort.UpdatedBy" />
            <input type="hidden" asp-for="Cohort.UpdatedOn" />
            <div class="form-group">
                <label asp-for="Cohort.Name" class="control-label"></label>
                <input asp-for="Cohort.Name" class="form-control" />
                <span asp-validation-for="Cohort.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cohort.Description" class="control-label"></label>
                <input asp-for="Cohort.Description" class="form-control" />
                <span asp-validation-for="Cohort.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cohort.StartDate" class="control-label"></label>
                <input asp-for="Cohort.StartDate" class="form-control" />
                <span asp-validation-for="Cohort.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cohort.IsRegistrationOpen" /> @Html.DisplayNameFor(model => model.Cohort.IsRegistrationOpen)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
