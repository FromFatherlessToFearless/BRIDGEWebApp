@page
@model BRIDGEWebApp.Pages.Cohort.IndexModel

@{
    ViewData["Title"] = "Cohorts";
}

<h1>Cohorts</h1>

<p>
    <a type="button" class="btn btn-sm btn-success" asp-page="Create">Create Cohort</a>
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cohorts[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cohorts[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cohorts[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cohorts[0].IsRegistrationOpen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cohorts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                    @if (item.IsRegistrationOpen)
                    {
                        <span>Yes</span>
                    } else
                    {
                        <span>No</span>
                    }
                </td>
            <td>
                <a type="button" class="btn btn-sm btn-primary" asp-page="./Details" asp-route-id="@item.Id">View</a>
                <a type="button" class="btn btn-sm btn-success" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
